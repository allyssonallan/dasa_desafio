def patternize(listx):
	return("\\b"+"\\b|\\b".join(listx)+"\\b")

def pop_pattern(x):
	try:
		pop_pat=patternize(populations[x])
	except KeyError:
		pop_pat="\\b"+x+"\\b"
	return(pop_pat)


